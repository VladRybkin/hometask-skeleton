<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="discountStrategies" class="java.util.HashSet">
        <constructor-arg>
            <set value-type="ua.training.spring.hometask.service.strategy.DiscountStrategy">
                <ref bean="birthdayDiscountStrategy"/>
                <ref bean="tenthTicketDiscountStrategy"/>
            </set>
        </constructor-arg>
    </bean>
    <bean id="birthdayDiscountStrategy" class="ua.training.spring.hometask.service.strategy.BirthdayDiscountStrategy"/>

    <bean id="tenthTicketDiscountStrategy" class="ua.training.spring.hometask.service.strategy.TenthTicketDiscountStrategy"/>

    <bean id="discountService" class="ua.training.spring.hometask.service.impl.DefaultDiscountService">
        <property name="discountStrategies" ref="discountStrategies"/>
    </bean>

    <context:annotation-config/>
    <context:component-scan base-package="ua.training.spring.hometask"/>
    <context:property-placeholder location="classpath:local.properties"/>
</beans>